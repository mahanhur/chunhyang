        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chflower.mapper.OrderMapper">

    <select id="getpage" resultType="order">
        SELECT *
        FROM item_order
    </select>

    <select id="select" parameterType="Integer" resultType="order">
        SELECT *
        FROM item_order
        WHERE cust_id = #{cust_id}
    </select>
